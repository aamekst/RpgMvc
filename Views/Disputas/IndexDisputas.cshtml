@model IEnumerable<RpgMvc.Models.DisputasViewModel>

@if (@TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]</div>
}
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]</div>
}
@{
    ViewBag.Title = "Disputas"; 
}
<h2>Relação das Disputas</h2>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.DataDisputa)</th>
        <th>@Html.DisplayNameFor(model => model.Narracao)</th>
        <th>@Html.DisplayNameFor(model => model.Resultados)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelIdem => item.Id)</td>
            <td>@Html.DisplayFor(modelIdem => item.DataDisputa)</td>
            <td>@Html.DisplayFor(modelIdem => item.Narracao)</td>
            <td>@Html.DisplayFor(modelIdem => item.Resultados)</td>
        </tr>
    }
</table>
@Html.ActionLink("Apagar Disputas", "ApagarDisputas", "Disputas" , null
    , new { @class = "btn btn-danger", onclick = "return confirm('Deseja realmente deletar este personagem ?');"})